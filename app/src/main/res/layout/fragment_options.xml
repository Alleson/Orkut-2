<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.OptionsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.braincorp.orkut2.view.ButtonWithIcon
            style="@style/ButtonWithIcon"
            android:id="@+id/buttonAddFriends"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:icon="@drawable/ic_add_friends"
            app:text="@string/add_friends"/>

        <com.braincorp.orkut2.view.ButtonWithIcon
            style="@style/ButtonWithIcon"
            android:id="@+id/buttonMyFriends"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            app:icon="@drawable/ic_my_friends"
            app:text="@string/my_friends"/>
    </RelativeLayout>

</ScrollView>